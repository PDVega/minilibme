<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Author</title>
  </head>
  <body>
    
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% data_authors.forEach(author =>{ %>
        <tr>
          <td><%= author.id %></td>
          <td><%= author.first_name %></td>
          <td><%= author.last_name %></td>
          <td><a href="/authors/edit/<%=author.id%>">Update</a> || <a href="/authors/delete/<%= author.id%>" onclick="return confirm('Are you sure want to delete this Author?');">Delete</a></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    
  </body>
</html>
