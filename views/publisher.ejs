<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.0/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.0/js/materialize.min.js"></script>
      <title>Publisher</title>
      <%- include partials/layout %>
  </head>
  <body>
    
    <div class="container">
    <h2>Daftar Penerbit</h2> 
    <table class="bordered highlight responsive-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Penerbit</th>
          <th>Pilihan</th>
        </tr>
      </thead>
      <tbody>
        <% data_publisher.forEach(publisher => { %>
        <tr>
          <td><%= publisher.id %></td>
          <td><%= publisher.name %></td>
          <td><a href="/publishers/edit/<%= publisher.id%>">Update</a> || <a href="/publishers/delete/<%= publisher.id%>" onclick="return confirm('Are you sure want to delete this Publisher?');">Delete</a></td>
        </tr>
        <% })%>
      </tbody>
    </table>
    </div>
  </body>
</html>
