<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.0/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.0/js/materialize.min.js"></script>
      <title>Author Book</title>
      <%- include partials/layout %>
  </head>
  <body>
    
    <div class="container">
    <h2>Penulis Buku</h2>
    <br>
    <form class="" action="/authorbooks/add" method="post">
      
      <div class="input-field">
      <select class="" name="BookId">
        <% data_book.forEach(book => { %>  
        <option value="<%= book.id%>"><%= book.title%></option>
        <% })%>
      </select>
      <label for="">Judul Buku</label>
    </div>
    
      
      <div class="input-field">
      <select name="AuthorId">
        <% data_author.forEach(author => { %>
        <option value="<%= author.id%>"><%= author.first_name + ' ' + author.last_name%></option>
        <% }) %>
      </select>
      <label for="">Nama Penulis</label>
    </div>
    
      
      <button type="submit" name="button" class="waves-effect waves-light btn-large">Add Author Book</button>
    </form>
  </div>
    
  
  <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>
      <script type="text/javascript">
        $(document).ready(function() {
          $('select').material_select();
        });
      </script>
    
  </body>
</html>
